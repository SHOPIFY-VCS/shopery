{% liquid
  assign margin_top = section.settings.marginTop
  assign margin_bottom = section.settings.marginBottom
  assign padding_top = section.settings.paddingTop
  assign padding_bottom = section.settings.paddingBottom
  assign promo_title = section.settings.promoTitle
  assign promo_content = section.settings.promocontent
  assign button_text = section.settings.button_text
  assign button_url = section.settings.button_url
  assign blocks = section.blocks
%}
<section
  id="Static"
  class="bg-no-repeat bg-cover mb-[{{ margin_bottom }}px] mt-[{{ margin_top }}px] pb-[{{ padding_bottom }}px] pt-[{{ padding_top }}px]"
  style="background-image: url('{{ 'img__bg_promo.svg' | asset_url }}');"
>
  {{- blocks | json -}}
  <div class="relative overflow-hidden ">
    <div class="pb-80 pt-16 sm:pb-40 sm:pt-24 lg:pb-48 lg:pt-40">
      <div class="relative max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0">
        <div class="sm:max-w-lg">
          <h1 class="text-4xl font-bold tracking-tight  text-gray-900 sm:text-6xl">{{- promo_title -}}</h1>
          <div class="mt-4 text-xl text-gray-500">
            {{- promo_content -}}
          </div>
        </div>
        <div>
          <div class="mt-10">
            <div
              aria-hidden="true"
              class="pointer-events-none lg:absolute lg:inset-y-0 lg:mx-auto lg:w-full lg:max-w-7xl"
            >
              <div
                class="absolute transform sm:left-1/2 sm:top-0 sm:translate-x-8 lg:left-1/2 lg:top-1/2 lg:-translate-y-1/2 lg:translate-x-8 "
              >
                <div class="flex items-center space-x-6 lg:space-x-8 ml-[16px]">
                  <div class="grid flex-shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
                    <div class="h-64 w-44 overflow-hidden rounded-lg sm:opacity-0 lg:opacity-100">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-2.svg' |  asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-3.svg' |  asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                  </div>
                  <div class="grid flex-shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-11.jpg' |  asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-10.jpg' |  asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-5.svg' |   asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                  </div>
                  <div class="grid flex-shrink-0 grid-cols-1 gap-y-6 lg:gap-y-8">
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-9.jpg' | asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                    <div class="h-64 w-44 overflow-hidden rounded-lg">
                      <img
                        width="auto"
                        height="auto"
                        src="{{'img__promos_image-8.jpg' |  asset_url}}"
                        alt=""
                        class="h-full w-full object-cover object-center"
                      >
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <a
              href=" {{- button_url -}}"
              class="inline-block rounded-md border border-transparent bg-[#00B307] px-8 py-3 text-center font-medium text-white"
            >
              {{- button_text -}}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{%- schema -%}
{
  "name": "Promo",
  "settings": [
    {
      "type": "text",
      "id": "promoTitle",
      "label": "Title",
      "default": "100% Trusted Organic Food Store"
    },
    {
      "type": "richtext",
      "id": "promocontent",
      "label": "Content",
      "default": "<p>This year, our new summer collection will shelter you from the harsh elements of a world that doesn't care if you live or die.</p>"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Collection"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "marginTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "marginBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "paddingBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "promo",
      "name": "Image",
      "limit": 7,
      "settings": [
        {
          "type": "image_picker",
          "id": "promo_image",
          "label": "Add Promo Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Promo"
    }
  ]
}
{%- endschema -%}
