{% liquid
  assign product = section.settings.product
  assign margin_top = section.settings.marginTop
  assign margin_bottom = section.settings.marginBottom
  assign padding_top = section.settings.paddingTop
  assign padding_bottom = section.settings.paddingBottom
%}
<section
  class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0  mb-[{{ margin_bottom }}px] mt-[{{ margin_top }}px] pb-[{{ padding_bottom }}px] pt-[{{ padding_top }}px]"
></section>
{% schema %}
{
  "name": "Feature Product",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "marginTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "marginBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "paddingBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Bottom",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Feature Product"
    }
  ]
}
{% endschema %}
