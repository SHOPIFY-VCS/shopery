{% liquid
  assign margin_top = section.settings.marginTop
  assign margin_bottom = section.settings.marginBottom
  assign padding_top = section.settings.paddingTop
  assign padding_bottom = section.settings.paddingBottom
%}
<section
  id="popularCategories"
  class="bg-no-repeat bg-cover mb-[{{ section.settings.marginBottom }}px] mt-[{{ section.settings.marginTop }}px] pb-[{{ section.settings.paddingBottom }}px] pt-[{{ section.settings.paddingTop }}px]"
  style="background-image: url('{{ 'img__bg_category.svg' | asset_url }}');"
>
  <div class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0">
    <div class="flex flex-row flex-wrap content-center justify-between items-center mb-[40px]">
      <h2 class="text-xl sm:text-2xl font-bold text-gray-900 sm:text-3xl">Top Categories</h2>
      <a href="/shop" class="not-italic font-medium text-sm sm:text-base text-[#00B307] flex gap-x-2"
        >View All<img
          src="{{'img__heading_right-arrow.svg' |  asset_url}}"
          width="auto"
          height="auto"
      ></a>
    </div>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
      <a
        href="#"
        class="group border rounded-[5px] border-solid border-[#E6E6E6] space-y-3 hover:shadow-[0px_0px_6px_rgba(32,181,38,0.32)] px-3 py-6 bg-white"
        ><img
          src="{{'img__category_image-3.svg' |  asset_url}}"
          alt="fruits"
          width="auto"
          height="auto"
        >
        <h3 class="not-italic font-medium text-sm sm:text-base text-center text-[#1A1A1A] group-hover:text-[#2C742F]">
          Baking Needs
        </h3>
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Top Categories",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "marginTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Top",
      "default": 0
    },
    {
      "type": "range",
      "id": "marginBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Margin Bottom",
      "default": 0
    },
    {
      "type": "range",
      "id": "paddingTop",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Top",
      "default": 80
    },
    {
      "type": "range",
      "id": "paddingBottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "label": "Padding Bottom",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Top Categories"
    }
  ]
}
{% endschema %}
