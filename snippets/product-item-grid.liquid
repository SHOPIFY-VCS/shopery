{% liquid
  assign featured_image = product.featured_image
  assign title = product.title
  assign url = product.url
  assign price = product.price
  assign product_compare_at_price = product.compare_at_price
  assign product_rating = product.metafields.details.rating
%}
<div class="group relative border  border-[#E6E6E6] rounded-[5px] hover:shadow-[0px_0px_6px_rgba(32,181,38,0.32)]">
  <div>
    <div class="flex space-x-2 absolute left-3 top-3">
      <p
        class="sm:px-3 sm:py-1.5 px-1.5 py-1 text-[8px] sm:text-xs font-bold tracking-wide text-white uppercase bg-[#EA4B48] rounded-full"
      >
        New
      </p>
      <p
        class="sm:px-3 sm:py-1.5 px-1.5 py-1 text-[8px] sm:text-xs font-bold tracking-wide text-white uppercase bg-[#00B307] rounded-full"
      >
        Sale
      </p>
    </div>

    <img
      class="object-cover w-full h-full"
      width="auto"
      height="auto"
      src="{{ featured_image | image_url }}"
      alt="vegetables"
    >
  </div>
  <div class="space-y-1 p-5">
    <a class="not-italic text-base font-semibold text-[#4D4D4D] group-hover:text-[#2C742F]" href="{{url}}">
      {{ title }}
    </a>
    <div class="flex justify-between items-center flex-wrap flex-row">
      <div>
        <div class="flex space-x-2">
          <p class="text-xs font-bold text-gray-900 sm:text-sm md:text-base">
            {{ product.price | money }}
          </p>

          <del class="mt-0.5 text-xs sm:text-sm font-bold text-gray-500">{{ product.compare_at_price | money }}</del>
        </div>
        <div class="flex items-center space-x-px">
          <img
            class="w-3 h-3 text-yellow-400 sm:w-4 sm:h-4"
            src="{{'img__rating_full.svg' |  asset_url}}"
            alt="yellow-star"
            width="auto"
            height="auto"
          >
          <img
            class="w-3 h-3 text-yellow-400 sm:w-4 sm:h-4"
            src="{{'img__rating_full.svg' |  asset_url}}"
            alt="yellow-star"
            width="auto"
            height="auto"
          >
          <img
            class="w-3 h-3 text-yellow-400 sm:w-4 sm:h-4"
            src="{{'img__rating_full.svg' |  asset_url}}"
            alt="yellow-star"
            width="auto"
            height="auto"
          >
          <img
            class="w-3 h-3 text-yellow-400 sm:w-4 sm:h-4"
            src="{{'img__rating_full.svg' |  asset_url}}"
            alt="yellow-star"
            width="auto"
            height="auto"
          >
          <img
            class="w-3 h-3 text-yellow-400 sm:w-4 sm:h-4"
            src="{{'img__rating_blank.svg' |  asset_url}}"
            alt="blank-star"
            width="auto"
            height="auto"
          >
        </div>
      </div>
      <div class="flex space-x-3">
        <div class="cursor-pointer">
          <img
            src="{{'img__wishlist_heart-green.svg' |  asset_url}}"
            class="hidden w-[26px] h-[26px]"
            alt="wishlist"
            width="auto"
            height="auto"
          >
          <img
            src="{{'img__wishlist_heart-black.svg' |  asset_url}}"
            width="auto"
            height="auto"
            class="w-[26px] h-[26px]"
            alt="wishlist"
          >
        </div>
        <a class="cursor-pointer" href="/cart">
          <img
            src="{{'img__cart_bag-green.svg' |  asset_url}}"
            class="hidden w-[24px] h-[24px]"
            alt="Cart"
            width="auto"
            height="auto">
          <img
            src="{{'img__cart_bag-black.svg' |  asset_url}}"
            class="w-[24px] h-[24px]"
            alt="Cart"
            width="auto"
            height="auto"
        ></a>
      </div>
    </div>
  </div>
</div>
