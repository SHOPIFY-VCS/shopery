<div class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0">
<div class="">
<h1>Blog Page</h1>

<h2>{{ blog.title }} ||</h2>

{% for article in blog.articles %}
  <div class="border">
    <a href="{{article.url}}">
      <h1>{{ article.title }}</h1>
    </a>
    <h1>{{ article.author }} | {{ article.created_at | date: '%B %d, %Y' }}</h1>
    <h1>{{ article.content }}</h1>
  </div>
{% endfor %}
</div>