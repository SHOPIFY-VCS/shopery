<h1>Article Liquid</h1>

<h1>{{ article.title }}</h1>
<div>
  {{ article.content }}
</div>

<h1>=====</h1>

{% if article.comments_enabled? %}
  <h1>Comment is enabled</h1>

  {% form 'new_comment', article %}{% endform %}
  {% form 'new_comment', article %}
    {{ form.errors | default_errors }}

    <div class="name">
      <label for="name">Name</label>
      <input type="text" name="comment[author]" value="{{ form.author }}">
    </div>

    <div class="email">
      <label for="email">Email</label>
      <input type="email" name="comment[email]" value="{{ form.email }}">
    </div>

    <div class="comment">
      <label for="comment">Comment</label>
      <textarea name="comment[body]">{{ form.body }}</textarea>
    </div>

    <div class="submit">
      <input type="submit" value="Post">
    </div>
  {% endform %}
{% endif %}
