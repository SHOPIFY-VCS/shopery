<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }}</title>
    {%- if settings.favicon != blank -%}
      <link rel="shortcut icon" href="{{ settings.favicon  }}" type="image/png" />
    {%- else -%}
      <link rel="icon" href="{{ 'favicon.svg' | asset_url }}" type="image/svg+xml">
    {%- endif -%}
    <script src="https://cdn.tailwindcss.com" />
    {{ content_for_header }}
  </head>

  <body>
    {% comment %} Header {% endcomment %}
    <header id="header">
      <div
        class="flex flex-row flex-wrap justify-center items-center bg-[#EDF2EE] text-[#2B572E] font-normal text-xs sm:text-sm leading-4 text-[#2B572E] gap-2  py-[12px] "
      >
        Free Coupon Code: Use<span
          class="mx-2 before:block before:absolute before:-inset-1 before:-skew-y-3 before:bg-[#00B307] relative inline-block font-semibold"
          ><span
            class="relative text-white"
            >NEW 26
          </span></span
        >for a Sale on Selected Items.<a
          href="#"
          class="underline text-[#00B307] font-semibold"
          >SHOP NOW</a
        >
      </div>
      <div
        class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0 flex flex-wrap md:flex-nowrap items-center md:justify-between gap-y-6 py-[24px]"
      >
        <a class="order-1 md:order-1 w-[40%] md:w-auto md:mr-[20px] lg:mr-[0px]" href="/"
          ><img
            class=""
            src="{{ 'img__header_logo.svg' | asset_url }}"
            width="auto"
            height="auto"
            alt="logo"
            width="auto"
            height="auto"
        ></a>
        <form class="flex order-3 w-full md:w-[50%] md:order-2" action="#">
          <input
            class="block p-3 pl-4 w-full text-sm text-gray-900 bg-white border border-[#00B307] rounded-none rounded-l-lg focus:ring-[#00B307] focus:border-[#00B307] outline-none caret-[#00B307]"
            placeholder="Search Here .."
            id="search"
            type="text"
            autocomplete="off"

          ><button
            type="submit"
            class="px-5 text-sm font-medium text-center text-white rounded-none rounded-r-lg border border-[#00B307] cursor-pointer bg-[#00B307]"
          >
            <img
              class="w-7 h-7"
              src="{{ 'img__header_search.svg' | asset_url }}"
              width="auto"
              height="auto"
              alt="search icon"
              width="auto"
              height="auto"
            >
          </button>
        </form>
        <div class="flex order-2 ml-auto md:ml-0 md:order-3 gap-x-3 md:gap-x-5">
          <a href="#" class="flex mr-[-25px]"
            ><span
              class="p-2 bg-[#00B307] w-5 h-5 rounded-full inline-flex items-center justify-center ml-1 text-xs font-bold text-white left-[40px] relative"
              >99</span
            ><img
              src="{{ 'img__header_heart.svg' | asset_url }}"
              width="auto"
              height="auto"
              alt="heart"
              width="auto"
              height="auto"></a
          ><a class="flex" href="/cart"
            ><span
              class="p-2 bg-[#00B307] w-5 h-5 rounded-full inline-flex items-center justify-center ml-1 text-xs font-bold text-white left-[35px] relative"
              >25</span
            ><img
              src="{{ 'img__header_bag.svg' | asset_url }}"
              width="auto"
              height="auto"
              alt="bag"
              width="auto"
              height="auto"
          ></a>
          <a class="space-y-2" href="/cart">
            <p class="not-italic font-normal text-sm leading-[13px] text-[#4D4D4D]">Cart :</p>
            <p class="not-italic font-medium text-sm leading-[100%] text-[#1A1A1A]">$570.00</p>
          </a>
        </div>
      </div>
      <div
        class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0 flex items-center justify-between gap-x-10 border-t py-[10px]"
      >
        <ul class="flex gap-x-5 md:gap-x-8">
          <li><a class="not-italic font-medium text-sm text-[#666666]" href="/">Home</a></li>
          <li><a class="not-italic font-medium text-sm text-[#666666]" href="/shop">Shop</a></li>
          <li><a class="not-italic font-medium text-sm text-[#666666]" href="#">Contact</a></li>
        </ul>
        <a href="#" class="flex gap-x-1 items-center space-x-1">
          <img
            src="{{ 'img__header_phone.svg' | asset_url }}"
            class="w-[32px] h-[32px] md:mt-2"
            width="auto"
            height="auto"
            alt="Phone call"
            width="auto"
            height="auto"
          >
          <div>
            <span class="hidden md:block not-italic font-medium text-xl leading-[30px] text-[#1A1A1A]"
              >(219) 555-0114</span
            >
          </div>
        </a>
      </div>
    </header>
    {{ content_for_layout }}
    {% comment %} Footer {% endcomment %}
    <footer id="footer" class="bg-[#161C28] py-10 lg:pb-8 pt-[80px]">
      <div class="max-w-screen-xl mx-auto px-4 sm:px-6 md:px-8 xl:px-0 space-y-20">
        <div class="text-center">
          <h2 class="mb-4 text-3xl font-extrabold tracking-tight text-white sm:text-4xl">
            Subscribe Newsletter for Updates
          </h2>
          <p class="mx-auto mb-8 max-w-2xl text-gray-500 text-base">
            Delve Deeper into Current Affairs with Our Informative Newsletter Bringing You Comprehensive Insights and
            Breaking News Highlights
          </p>
          <form action="#">
            <div class="items-center mx-auto mb-3 space-y-4 max-w-screen-sm sm:flex sm:space-y-0">
              <div class="relative w-full">
                <label for="email" class="hidden mb-2 text-sm font-medium text-gray-900">Email address</label>
                <div class="flex absolute inset-y-0 left-0 items-center pl-3 pointer-events-none">
                  <img
                    class="w-4 h-4 text-gray-500"
                    src="{{'img__footer_email.svg' | asset_url}}"
                    width="auto"
                    height="auto"
                    alt="email-icon"
                  >
                </div>
                <input
                  class="block p-3 pl-9 w-full text-sm text-gray-900 bg-white rounded-lg border border-[#00B307] sm:rounded-none sm:rounded-l-lg focus:ring-[#00B307] focus:border-[#00B307] outline-none caret-[#00B307]"
                  placeholder="Enter your email"
                  id="email"
                  type="email"
                  autocomplete="off"
                >
              </div>
              <div>
                <button
                  type="submit"
                  class="py-3 px-5 w-full text-sm font-medium text-center text-white rounded-lg border cursor-pointer bg-[#00B307] border-[#00B307] sm:rounded-none sm:rounded-r-lg hover:bg-[#00B307]"
                >
                  Subscribe
                </button>
              </div>
            </div>
            <div class="mx-auto max-w-screen-sm text-sm text-left text-gray-500 newsletter-form-footer ">
              We care about the protection of your data.<a class="font-medium text-[#00B307] ml-1" href="#"
                >Read our Privacy Policy</a
              >.
            </div>
          </form>
        </div>
        <div>
          <div class="grid grid-cols-2 gap-8 md:grid-cols-3 lg:grid-cols-5">
            <div>
              <h2 class="mb-6 text-sm font-semibold text-white uppercase">Popular Picks</h2>
              <ul class="text-gray-500">
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Culture</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Economy</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Education</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Entertainment</a></li>
              </ul>
            </div>
            <div>
              <h2 class="mb-6 text-sm font-semibold text-white uppercase">Exclusive Deals</h2>
              <ul class="text-gray-500">
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Fashion</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Finance</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Fitness</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Food</a></li>
              </ul>
            </div>
            <div>
              <h2 class="mb-6 text-sm font-semibold text-white uppercase">New Arrivals</h2>
              <ul class="text-gray-500">
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Health</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">History</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Movies</a></li>
                <li class="mb-4"><a class="hover:text-[#00B307]" href="#">Music</a></li>
              </ul>
            </div>
            <div>
              <h2 class="mb-6 text-sm font-semibold text-white uppercase">International</h2>
              <ul class="text-gray-500">
                <li class="mb-4">
                  <div class="flex py-4 first:pt-0 last:pb-0 items-center">
                    <img
                      class="h-6 w-6 rounded-full object-cover"
                      src="{{'img__footer_bangladesh.svg' | asset_url}}"
                      width="auto"
                      height="auto"
                      alt="Bangladesh flag"

                    ><a
                      class="ml-3 overflow-hidden hover:text-[#00B307]"
                      href="#"
                      >Bangladesh</a
                    >
                  </div>
                </li>
                <li class="mb-4">
                  <div class="flex py-4 first:pt-0 last:pb-0 items-center">
                    <img
                      class="h-6 w-6 rounded-full object-cover"
                      src="{{'img__footer_pakistan.svg' | asset_url}}"
                      width="auto"
                      height="auto"
                      alt="Pakistan flag"

                    ><a
                      class="ml-3 overflow-hidden hover:text-[#00B307]"
                      href="#"
                      >Pakistan</a
                    >
                  </div>
                </li>
                <li class="mb-4">
                  <div class="flex py-4 first:pt-0 last:pb-0 items-center">
                    <img
                      class="h-6 w-6 rounded-full object-cover"
                      src="{{'img__footer_myanmar.svg' | asset_url}}"
                      width="auto"
                      height="auto"
                      alt="myanmar flag"

                    ><a
                      class="ml-3 overflow-hidden hover:text-[#00B307]"
                      href="#"
                      >Myanmar</a
                    >
                  </div>
                </li>
                <li class="mb-4">
                  <div class="flex py-4 first:pt-0 last:pb-0 items-center">
                    <img
                      class="h-6 w-6 rounded-full object-cover"
                      src="{{'img__footer_india.svg' | asset_url}}"
                      width="auto"
                      height="auto"
                      alt="india flag"

                    ><a
                      class="ml-3 overflow-hidden hover:text-[#00B307]"
                      href="#"
                      >India</a
                    >
                  </div>
                </li>
              </ul>
            </div>
            <div>
              <h2 class="mb-6 text-sm font-semibold text-white uppercase">Get Our App</h2>
              <ul class="text-gray-500">
                <li class="mb-4">
                  <a class="" href="#">
                    <img src="{{'img__footer_googleplay.svg' | asset_url}}" width="auto" height="auto" alt="play store">
                  </a>
                </li>
                <li class="mb-4">
                  <a class="" href="#"
                    ><img src="{{'img__footer_appstore.svg' | asset_url}}" width="auto" height="auto" alt="app store"
                  ></a>
                </li>
              </ul>
            </div>
          </div>
          <hr class="my-6 border-gray-500 sm:mx-auto lg:my-10">
          <div class="flex flex-col-reverse md:flex-row gap-y-4 justify-between items-center">
            <span
              class="block text-sm text-center text-gray-500"
              >© 2021- 2024<a
                class="text-[#00B307] ml-1"
                href="#"
                >ecobazar™</a
              >. All Rights Reserved.</span
            ><a
              class="flex justify-center items-center text-2xl font-semibold text-gray-900"
              href="#"
              ><img
                width="auto"
                height="auto"
                alt="Payment Methods"
                src="{{'img__footer_payment-methods.svg' | asset_url}}"
                class="rounded"
            ></a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
